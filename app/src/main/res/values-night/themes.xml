<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SelfStudy" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue80</item>
        <item name="colorPrimaryVariant">@color/blue80</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue60</item>
        <item name="colorSecondaryVariant">@color/blue60</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!--window background-->
        <item name="android:colorBackground">@color/dark_background</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_background</item>

        <!-- tool bar color -->
        <item name="toolbar_color">@color/dark_toolbar_background</item>
        <item name="word_card_toolbar_color">@color/dark_toolbar_background</item>

        <!-- display ActionMode over toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>


        <!--cancel underline in search view -->
        <item name="searchViewStyle">@style/MySearchView</item>

        <!--common-->
        <item name="primary_text_color">@android:color/white</item>
        <item name="primary_icon_tint">@color/icon_white</item>
        <item name="primary_divide_color">@color/divide_color_white</item>

    </style>



</resources>