<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookFragment">

    <fragment
        android:id="@+id/bookFragment"
        android:name="com.bu.selfstudy.ui.book.BookFragment"
        android:label="我的題庫" >
        <action
            android:id="@+id/action_bookFragment_to_editBookDialog"
            app:destination="@id/editBookDialog" />
        <action
            android:id="@+id/action_bookFragment_to_deleteBookDialog"
            app:destination="@id/deleteBookDialog" />
        <action
            android:id="@+id/action_bookFragment_to_addBookDialog"
            app:destination="@id/addBookDialog" />
        <action
            android:id="@+id/action_bookFragment_to_wordCardFragment"
            app:destination="@id/wordCardFragment" />
    </fragment>

    <fragment
        android:id="@+id/wordCardFragment"
        android:name="com.bu.selfstudy.ui.wordcard.WordCardFragment">
        <action
            android:id="@+id/action_wordCardFragment_to_wordFragment"
            app:destination="@id/wordListFragment" />
    </fragment>

    <fragment
        android:id="@+id/wordListFragment"
        android:name="com.bu.selfstudy.ui.wordlist.WordListFragment"
        tools:layout="@layout/fragment_word_list"/>

    <fragment
        android:id="@+id/subscriptionFragment"
        android:name="com.bu.selfstudy.ui.SubscriptionFragment"
        android:label="升級您的應用程式"
        tools:layout="@layout/fragment_subscription"/>
    <fragment
        android:id="@+id/suggestFragment"
        android:name="com.bu.selfstudy.ui.SuggestFragment"
        android:label="使用者建議"
        tools:layout="@layout/fragment_suggest"/>
    <fragment
        android:id="@+id/trashFragment"
        android:name="com.bu.selfstudy.ui.TrashFragment"
        android:label="單字回收箱"
        tools:layout="@layout/fragment_trash"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.bu.selfstudy.ui.SettingFragment"
        android:label="設定"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/themeFragment"
        android:name="com.bu.selfstudy.ui.ThemeFragment"
        android:label="更換主題"
        tools:layout="@layout/fragment_theme"/>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.bu.selfstudy.ui.AccountFragment"
        android:label="個人資訊"
        tools:layout="@layout/fragment_account"/>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.bu.selfstudy.ui.LoginFragment"
        android:label="使用者登入"
        tools:layout="@layout/fragment_login"/>
    <dialog
        android:id="@+id/chooseBookDialog"
        android:name="com.bu.selfstudy.ui.dialog.ChooseBookDialog"
        android:label="選擇一個題庫" >
        <argument
            android:name="bookNames"
            app:argType="string[]" />
        <argument
            android:name="bookIds"
            app:argType="long[]" />
        <argument
            android:name="message"
            app:argType="string" />
        <argument
            android:name="action"
            app:argType="string" />
    </dialog>
    <action android:id="@+id/action_global_chooseBookDialog"
            app:destination="@id/chooseBookDialog" />

    <dialog
        android:id="@+id/toDeleteDialog"
        android:name="com.bu.selfstudy.ui.dialog.ToDeleteDialog"
        android:label="ToDeleteDialog" >
        <argument
            android:name="message"
            app:argType="string" />
        <argument
            android:name="wordId"
            app:argType="long" />
    </dialog>
    <action android:id="@+id/action_global_toDeleteDialog"
            app:destination="@id/toDeleteDialog" />

    <fragment
        android:id="@+id/addWordFragment"
        android:name="com.bu.selfstudy.ui.addword.AddWordFragment"
        android:label="加入單字"
        tools:layout="@layout/fragment_add_word"/>
    <action android:id="@+id/action_global_addWordFragment"
            app:destination="@id/addWordFragment"/>

    <fragment
        android:id="@+id/editWordFragment"
        android:name="com.bu.selfstudy.ui.editword.EditWordFragment"
        android:label="編輯單字"
        tools:layout="@layout/fragment_add_word">
        <argument
            android:name="wordId"
            app:argType="long" />
        <action
            android:id="@+id/action_editWordFragment_to_exitEditingDialog"
            app:destination="@id/exitEditingDialog" />
    </fragment>
    <action android:id="@+id/action_global_editWordFragment" app:destination="@id/editWordFragment" />
    <dialog
        android:id="@+id/exitEditingDialog"
        android:name="com.bu.selfstudy.ui.editword.ExitEditingDialog"
        android:label="ExitEditingDialog" />

    <dialog
        android:id="@+id/addBookDialog"
        android:name="com.bu.selfstudy.ui.book.AddBookDialog"
        android:label="AddBookDialog" />

    <dialog
        android:id="@+id/deleteBookDialog"
        android:name="com.bu.selfstudy.ui.book.DeleteBookDialog"
        android:label="deleteBookDialog">
        <argument
            android:name="bookName"
            app:argType="string" />
    </dialog>

    <dialog
        android:id="@+id/editBookDialog"
        android:name="com.bu.selfstudy.ui.book.EditBookDialog"
        android:label="EditBookDialog" >
        <argument
            android:name="bookName"
            app:argType="string" />
    </dialog>


</navigation>