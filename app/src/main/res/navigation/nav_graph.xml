<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookFragment">

    <fragment
        android:id="@+id/bookFragment"
        android:name="com.bu.selfstudy.ui.book.BookFragment"
        android:label="從字典搜尋" >
        <action
            android:id="@+id/action_bookFragment_to_editBookDialog"
            app:destination="@id/editBookDialog" />

        <action
            android:id="@+id/action_bookFragment_to_recentWordFragment"
            app:destination="@id/recentWordFragment" />
    </fragment>

    <fragment
        android:id="@+id/wordCardFragment"
        android:name="com.bu.selfstudy.ui.wordcard.WordCardFragment">
        <argument
            android:name="wordId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="bookId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/wordListFragment"
        android:name="com.bu.selfstudy.ui.wordlist.WordListFragment"
        tools:layout="@layout/fragment_word_list">
        <argument
            android:name="wordId"
            app:argType="long"
            android:defaultValue="0L" />
        <argument
            android:name="bookId"
            app:argType="long" />
    </fragment>

    <fragment
        android:id="@+id/suggestFragment"
        android:name="com.bu.selfstudy.ui.SuggestFragment"
        android:label="使用者建議"
        tools:layout="@layout/fragment_suggest"/>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.bu.selfstudy.ui.SettingFragment"
        android:label="設定"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/themeFragment"
        android:name="com.bu.selfstudy.ui.ThemeFragment"
        android:label="更換主題"
        tools:layout="@layout/fragment_theme"/>
    <dialog
        android:id="@+id/dialogChooseBook"
        android:name="com.bu.selfstudy.ui.dialog.DialogChooseBook"
        android:label="">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="bookId"
            app:argType="long"
            android:defaultValue="0L" />
    </dialog>
    <action android:id="@+id/action_global_chooseBookDialog"
            app:destination="@id/dialogChooseBook" />

    <dialog
        android:id="@+id/dialogDeleteCommon"
        android:name="com.bu.selfstudy.ui.dialog.DialogDeleteCommon"
        android:label="" >
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="message"
            app:argType="string" />
    </dialog>

    <fragment
        android:id="@+id/addWordFragment"
        android:name="com.bu.selfstudy.ui.addword.AddWordFragment"
        android:label="新增單字"
        tools:layout="@layout/fragment_add_word">
        <argument
            android:name="bookId"
            app:argType="long"
            android:defaultValue="0L" />
        <action
            android:id="@+id/action_addWordFragment_to_exitEditingDialog"
            app:destination="@id/exitEditingDialog" />
    </fragment>
    <action android:id="@+id/action_global_addWordFragment"
            app:destination="@id/addWordFragment"/>

    <fragment
        android:id="@+id/editWordFragment"
        android:name="com.bu.selfstudy.ui.editword.EditWordFragment"
        android:label="編輯單字"
        tools:layout="@layout/fragment_add_word">
        <action
            android:id="@+id/action_editWordFragment_to_exitEditingDialog"
            app:destination="@id/exitEditingDialog" />
        <argument
            android:name="word"
            app:argType="com.bu.selfstudy.data.model.Word" />
    </fragment>
    <action android:id="@+id/action_global_editWordFragment" app:destination="@id/editWordFragment" />
    <dialog
        android:id="@+id/exitEditingDialog"
        android:name="com.bu.selfstudy.ui.editword.DialogSaveAndExit"
        android:label="ExitEditingDialog" />

    <dialog
        android:id="@+id/editBookDialog"
        android:name="com.bu.selfstudy.ui.book.DialogEditBook"
        android:label="EditBookDialog" >
        <argument
            android:name="bookName"
            app:argType="string" />
    </dialog>
    <action android:id="@+id/action_global_dialogDeleteCommon" app:destination="@id/dialogDeleteCommon" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.bu.selfstudy.ui.search.SearchFragment"
        android:label="從字典搜尋" ><!--避免SearchView還沒打開, 會短暫出現無意義的標題-->
    </fragment>
    <fragment
        android:id="@+id/recentWordFragment"
        android:name="com.bu.selfstudy.ui.recentword.RecentWordFragment"
        android:label="從字典搜尋" />

    <fragment
        android:id="@+id/archiveFragment"
        android:name="com.bu.selfstudy.ui.archive.ArchiveFragment"
        android:label="從字典搜尋" >
        <action
            android:id="@+id/action_archiveFragment_to_editBookDialog"
            app:destination="@id/editBookDialog" />
    </fragment>
    <action android:id="@+id/action_global_wordListFragment" app:destination="@id/wordListFragment" />
    <action android:id="@+id/action_global_wordCardFragment" app:destination="@id/wordCardFragment" />
    <fragment
        android:id="@+id/markFragment"
        android:name="com.bu.selfstudy.ui.MarkFragment"
        android:label="從字典搜尋" />
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.bu.selfstudy.ui.book.AddBookFragment"
        android:label="AddBookFragment" />


</navigation>