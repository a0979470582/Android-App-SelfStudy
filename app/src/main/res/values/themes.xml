<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SelfStudy" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue80</item>
        <item name="colorPrimaryVariant">@color/blue80</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue60</item>
        <item name="colorSecondaryVariant">@color/blue60</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/toolbar_title_color</item>

        <!-- tool bar color -->
        <item name="toolbar_color">@android:color/white</item>
        <item name="word_card_toolbar_color">@color/blue80</item>

        <!-- display ActionMode over toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>

        <!--cancel underline in search view -->
        <item name="searchViewStyle">@style/MySearchView</item>

        <!--common-->
        <item name="primary_text_color">@android:color/black</item>
        <item name="primary_icon_tint">@color/icon_black</item>
        <item name="primary_divide_color">@color/divide_color_black</item>

        <item name="drop_down_background">@color/drop_down_background_white</item>
        <item name="word_card_wordName_color">@color/black53</item>
        <item name="word_card_button_color">@color/colorButtonEnabled</item>

        <item name="nav_view_background">@color/blue80</item>
    </style>

</resources>