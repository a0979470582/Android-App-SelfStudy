<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="arrow_default_size">25dp</dimen>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divide_color</item>
    </style>


    <style name="color_picker_IconOnly"
        parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>


    <style name="color_picker_animation">
        <item name="android:windowEnterAnimation">@anim/color_picker_show</item>
        <item name="android:windowExitAnimation">@anim/color_picker_hide</item>
    </style>

    <style name="title_text_style" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/icon_black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MySearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/white</item>
        <item name="queryBackground">@color/white</item>
    </style>

</resources>